.template-wrap  .scroll-view .scroll-view-item.active image{
  border: 1rpx solid #48cfae;
}
*/

.page .btn_save {
  color: #fff;
  background-color: #48cfae;
  border-radius: 0rpx;
}


.page .card-aggrement{
  font-size:28rpx;
}
.page .card-aggrement .weui-cell{
  padding:20rpx 0rpx;
}
.page .card-aggrement .link-aggrement {
  color: #48cfae;
}