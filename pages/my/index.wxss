/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.handle{
  display: flex;
  margin-top: 30rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.handle .handle-item{
  flex: 1;
  text-align: center;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 30rpx;
  color: #333;
}
.handle .handle-item:first-child{
  border-right:1rpx solid #eee;
}